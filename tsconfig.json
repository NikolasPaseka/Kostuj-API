	"compilerOptions": {
		"target": "ES2021",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true
	},
    "include": ["src/**/*", "api/**/*"],
    "exclude": ["node_modules", "dist"]
}
